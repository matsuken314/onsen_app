<% if current_user.bookmarked_by?(onsen.id) %>
       <%= link_to destroy_bookmark_path(onsen), method: :DELETE,class: 'bookmark__button-active', remote: true do %>
      <i class="fas fa-bookmark fa-2x"></i>
      <% end %><%= onsen.bookmarks.count %>
<% else %>
      <%= link_to create_bookmark_path(onsen), method: :POST,class: 'bookmark__button', remote: true do %>
     <i class="far fa-bookmark fa-2x"></i>
      <% end %><%= onsen.bookmarks.count %>
<% end %>